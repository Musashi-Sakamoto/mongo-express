<h1>ブログ一覧</h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% blogs.forEach(blog => { %>
      <tr>
        <td>
          <%= blog.title %>
        </td>
        <td><%= blog.body %></td>
        <td>
          <a href="<%= `/blogs/${blog._id}/edit` %>">Edit</a>
        </td>
        <td>
          <a 
            href="<%= `/blogs/${blog._id}/delete?_method=DELETE` %>"
            onclick="return confirm('本当にこのブログを削除しますか？')"
          >
            DELETE
          </a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>